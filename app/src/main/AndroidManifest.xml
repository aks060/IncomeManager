<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dynusroot.incomemanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_foreground"
        android:label="Income Manager"
        android:roundIcon="@drawable/logo_foreground"
        android:resizeableActivity="true"
        android:theme="@style/Theme.IncomeManager">
        <activity
            android:name=".activities.ScheduledTransactions"
            android:exported="false" />
        <activity android:name=".activities.Transactions_Type.CreditDebitTransaction" />
        <activity android:name=".activities.Transactions" />
        <activity android:name=".activities.AddSubAccount" />
        <activity android:name=".activities.AddAccount" />
        <activity android:name=".activities.AccountPage" />
        <activity android:name=".activities.Dashboard" />
        <activity
            android:name=".activities.Splash_Screen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.IncomeManager.Fullscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />

    </application>

</manifest>